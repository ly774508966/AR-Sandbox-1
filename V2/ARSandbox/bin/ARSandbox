#!/bin/bash

echo Running Augmented Reality Sandbox

# Start Sandbox in Dry Mode
./RunSandboxDry &

# while true switch modes
# modes 7 and 8 are for the future, won't work currently
while true
do
	read -p " " answer
	case $answer in
	 [1]* ) 
		  killall SARndbox
	      ./RunSandboxDry & ;;
	 [2]* )     
		  killall SARndbox
	      ./RunSandbox &
	      ./water ;;
	 [3]* ) 
	      killall SARndbox
	      ./RunSandbox &
	      ./lava ;;
	 [4]* ) 
	      killall SARndbox
	      ./RunSandbox &
	      ./ice ;;
	 [5]* ) 
	      killall SARndbox
	      ./RunSandbox &
	      ./snow ;;
	 [6]* ) 
	      killall SARndbox
	      ./RunSandbox &
	      ./toxic ;;
	 [7]* )
		  killall SARndbox
		  ./RunSandboxMelting &
		  ./ice ;;
	 [8]* )
		  killall SARndbox
		  ./RunSandboxVolcano &
		  ./lava ;;
	 [xX]* )
	      killall SARndbox
	      break ;;
	 * ) " "
	esac
done

exit 0
# add fullscreen flag to water,lava... scripts afterwards
